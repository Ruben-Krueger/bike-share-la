<!DOCTYPE html>
<html>
<head>
    <title>BikeShareLA</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <% include partials/head.ejs%>
</head>
<body>
<div class="container-fluid">
    <h1>BikeShareLA</h1>
    <div class="row text-center">
        <div class="col-md-6">
            <h1>Average distance traveled</h1>
            <canvas id="adt" width="400" height="400"></canvas>
        </div>

    </div>
    <div class="row">

    </div>


</div>


<script>

    var pass_types = ['Monthly Pass', 'Flex Pass', 'Walk-up', 'Staff Annual'];

    var ctx = document.getElementById("adt");
    var passes = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: pass_types,
            datasets: [{
                label: ['Miles Traveled'],
                data: [4.22, 1.57, 1.00, 0.39],
                backgroundColor: ['rgba(255,99,132,1)', 'rgb(153, 102, 255)', "rgb(54, 162, 235)", "rgb(75, 192, 192)"],
                borderColor: [
                    'rgba(255,99,132,1)',
                    'rgb(153, 102, 255)',
                    "rgb(54, 162, 235)",
                    "rgb(75, 192, 192)"

                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: false,
            scales: {
                xAxes: [{
                    ticks: {
                        maxRotation: 90,
                        minRotation: 80
                    },

                }],
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    },
                    scaleLabel: {
                        display: true,
                        labelString: "Average Distance Per Ride (miles)"
                    }
                }]
            }
        }
    });

</script>





<% include partials/navbar.ejs%>

</body>
</html>
